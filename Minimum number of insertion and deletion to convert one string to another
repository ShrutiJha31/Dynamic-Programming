// { Driver Code Starts
#include <bits/stdc++.h>
using namespace std;

 // } Driver Code Ends
class Solution{
		

	public:
	int minOperations(string s1, string s2) 
	{ 
	    int x=s1.length();
	    int y=s2.length();
	    
	     int dp[x+1][y+1];
        for(int i=0;i<=y;i++)
        dp[0][i]=0;
        for(int i=0;i<=x;i++)
        dp[i][0]=0;
        for(int i=1;i<=x;i++)
        {
            for(int j=1;j<=y;j++)
            {
                if(s1[i-1]==s2[j-1])
                {
                dp[i][j]=1+dp[i-1][j-1];
                //cout<<i<<" "<<j<<endl;
                }
                else
                dp[i][j]=max(dp[i-1][j],dp[i][j-1]);
            }
        }
        return x+y-2*dp[x][y];
	} 
};

// { Driver Code Starts.
int main() 
{
   	
   
   	int t;
    cin >> t;
    while (t--)
    {
        string s1, s2;
        cin >> s1 >> s2;

	    Solution ob;
	    cout << ob.minOperations(s1, s2) << "\n";
	     
    }
    return 0;
}

  // } Driver Code Ends
